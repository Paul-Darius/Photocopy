<p id="notice"><%= notice %></p>

<h1>Listing Purchases</h1>

<table>
  <thead>
    <tr>
      <th>Download Link</th>
      <th>From Page</th>
      <th>To Page</th>
      <th>Number of pages printed per page</th>
      <th>Black and White</th>
      <th>Binding</th>
      <th>Tape</th>
      <th>Status</th>
      <th>Comments</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>


      <tr>
        <td><%= link_to "Download Purchase", purchase.attachment_url %></td>
        <td><% if purchase.from_page.blank? %>
              First page
          <% else %>
              <%= purchase.from_page %>
          <% end %>
        </td>
        <td><% if purchase.to_page.blank? %>
              Last page
          <% else %>
              <%= purchase.to_page %>
          <% end %>
        </td>
        <td><%= purchase.number_pages_per_pages  %></td>
        <td><% if purchase.bandw = false %>
              Colored
          <% else %>
              Black and White
          <% end %>
        </td>
        <td><% if purchase.binding==false %>
              Colored
          <% else %>
              Black and White
          <% end %>
        </td>
        <td><% if purchase.tape == true%>
              With tape
          <% else %>
              Without tape
          <% end %>
        </td>
        <td><% if current_user.admin? %>
              <%= form_for(purchase) do |f| %>
              <%= f.select :status, {"Not Seen Yet" => 0, "Working on it"  => 1, "Finished" => 2} %>
              <%= f.submit "Save", class: "btn btn-primary" %>
          <% end %>
              <% end %>
          <% if (purchase.status==0 )%>
              Not Seen Yet
          <% elsif (purchase.status==1 )%>
              Working on it
          <% elsif (purchase.status ==2) %>
              Finished
          <% end %>
        </td>
        <td><%= purchase.comments %></td>
        <td><%= link_to 'Show Detail', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Purchase', new_purchase_path %></br>
